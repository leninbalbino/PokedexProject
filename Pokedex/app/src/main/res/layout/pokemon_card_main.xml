<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        cardCornerRadius="@dimen/card_pokemon_radius">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pokemon_cover_height"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:scaleType="fitXY"/>


            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_icon"
                android:paddingLeft="@dimen/pokemon_title_padding"
                android:paddingRight="@dimen/pokemon_title_padding"
                android:paddingTop="@dimen/pokemon_title_padding"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/pokemon_title" />

            <ImageView
                android:id="@+id/overflow"
                android:layout_width="@dimen/ic_overflow_width"
                android:layout_height="@dimen/ic_overflow_height"
                android:layout_alignParentRight="true"
                android:layout_below="@id/iv_icon"
                android:layout_marginTop="@dimen/ic_overflow_margin_top"
                android:layout_marginRight="3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_dots" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>